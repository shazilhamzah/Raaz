{
  "expo": {
    "name": "Raaz",
    "slug": "raaz-journal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",  // <-- CHANGE THIS to 'dark' (helps system defaults)
    "backgroundColor": "#0F2854",  // <-- ADD THIS LINE (The Root Background)

    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F2854"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F2854"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.shazilhamzah.raazjournal"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-font",
      [
        "expo-navigation-bar",
        {
          "position": "absolute",
          "visibility": "hidden",
          "behavior": "overlay-swipe",
          "backgroundColor": "#0F2854"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "e3fad4db-81d1-409d-bfe5-db89eb0a40bc"
      }
    }
  }
}